% store the value of column2 into a new \def
%
% #1 - \def name
% #2 - db name
% #3 - column1 name
% #4 - column1 value
% #5 - column2 name 
%
\newcommand{\DTLdef}[5]{%
	\edtlgetrowforvalue{#2}{\dtlcolumnindex{#2}{#3}}{#4}%
	\dtlgetentryfromcurrentrow{\dtlcurrentvalue}{\dtlcolumnindex{#2}{#5}}%
	\let#1\dtlcurrentvalue
}

